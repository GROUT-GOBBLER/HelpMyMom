<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="momUI.QuickLogin"
             Title="QuickLogin">
    <VerticalStackLayout
        Spacing="25"
        Padding="40,150">
        
        <Button
            x:Name="Mom"
            Text="Mom Login" 
            SemanticProperties.Hint="Get"
            Padding="30,20"
           
            Clicked="Mom_Clicked"
            VerticalOptions="Center"
            HorizontalOptions="Fill" />
        <Button
            x:Name="Child"
            Text="Child Login" 
            SemanticProperties.Hint="Get"
            Padding="30,20"
            Clicked="Child_Clicked"
            VerticalOptions="Center"
            HorizontalOptions="Fill" />
        <Button
            x:Name="Helper"
            Text="Helper Login" 
            SemanticProperties.Hint="Get"
            Padding="30,20"
            Clicked="Helper_Clicked"
            VerticalOptions="Center"
            HorizontalOptions="Fill" />



    </VerticalStackLayout>
</ContentPage>