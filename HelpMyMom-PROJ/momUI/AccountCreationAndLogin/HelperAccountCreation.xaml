<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="momUI.HelperAccountCreation"
             xmlns:models="clr-namespace:momUI.models"
             Title="HelperAccountCreation">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,80"
            Spacing="25">
            <Label 
                Text="Username:"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
            />

            <Entry x:Name="UsernameEntry"
                Placeholder="Enter Username"
                VerticalOptions="Center"
            />
            <Label 
                Text="Password:"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
            />

            <Entry x:Name="PasswordEntry"
                Placeholder="Enter Password"
                VerticalOptions="Center"
            />
          
            <Label 
                Text="Email:"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
            />

            <Entry x:Name="EmailEntry"
                Placeholder="Enter Email"
                VerticalOptions="Center"
            />

            <Label 
                Text="First Name:"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
            />

            <Entry x:Name="FirstNameEntry"
                Placeholder="first name"
                VerticalOptions="Center"
            />

            <Label 
                Text="Last Name:"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
            />

            <Entry x:Name="LastNameEntry"
                Placeholder="last name"
                VerticalOptions="Center"
            />
            <Label 
                Text="Date of Birth yyyy/mm/dd"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
             />
            <DatePicker 
                x:Name="DatePicker" />

            <!-- <Entry x:Name="DOBEntry"
                Placeholder="Enter DOB"
                VerticalOptions="Center"
             />  -->
            <Label 
                Text="specailties"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
            />
            <SearchBar x:Name = "Search"
                 Placeholder="enter your specailties" 
                 SearchButtonPressed="Search_SearchButtonPressed"/>
            
             <ListView 
                    x:Name="SearchResultList"
                    ItemSelected="SearchResultList_ItemSelected"
                    Loaded="SearchResults_Loaded"
                    HasUnevenRows="True"
                    HorizontalOptions="Start"
                    RowHeight="90"
                    Margin="5,10,5,10">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:Spec">
                            <ViewCell>
                                <StackLayout>
                                    <Label 
                                       Text="{Binding Name}"
                                        TextColor="Black"
                                       FontSize="22"
                                     />
                                </StackLayout>

                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
             </ListView>
             <Label 
                Text="selected specailties"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
             />

            <ListView 
                x:Name="SelectedList"
                ItemSelected="SelectedList_ItemSelected"
                HasUnevenRows="True"
                HorizontalOptions="Start"
                RowHeight="90"
                Margin="5,10,5,10">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Spec">
                        <ViewCell>
                            <StackLayout>
                                <Label 
                                    Text="{Binding Name}"
                                    TextColor="Black"
                                    FontSize="22"
                                />
                            </StackLayout>

                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>







            <Label 
                Text="description"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
            />
            <Editor x:Name="descriptionEditor"
                Placeholder="Enter your response here"
                HeightRequest="250"

             />
            <Button
                x:Name="CreateAccountButton"
                Text="Create Account" 
                SemanticProperties.Hint="Get"
                Clicked="CreateAccountButton_Clicked"
                VerticalOptions="Center"
                HorizontalOptions="Fill" 
            />
            <Label 
                x:Name="ErrorLabel"
                Text=""
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
            />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>