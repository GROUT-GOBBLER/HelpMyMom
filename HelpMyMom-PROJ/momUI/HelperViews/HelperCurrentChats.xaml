<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="momUI.HelperViews.HelperCurrentChats"
             Title="HelperCurrentChats">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label 
                x:Name="SWAGLABEL"
                Text="CURRENT CHATS."
                FontSize="Header"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

                <ListView
                    x:Name="CurrentChatsListView"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    VerticalScrollBarVisibility="Never" 
                    HasUnevenRows="True" 
                    ItemTapped="CurrentChatsListView_ItemTapped">
                    <ListView.ItemTemplate>                    
                        <DataTemplate>
                            <ViewCell>
                                <Grid
                                    Padding="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                    <Label 
                                        Grid.Row="0"
                                        Text="{Binding momName}"
                                        FontSize="25"
                                        FontAttributes="Bold"/>
                                    <Label 
                                        Grid.Row="1"
                                        Text="{Binding lastMessageTime}"
                                        FontSize="15"
                                        FontAttributes="None"/>
                                    <Label 
                                        Grid.Row="2"
                                        Text="{Binding lastMessageSent}"
                                        FontSize="15"
                                        FontAttributes="Italic" />
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>