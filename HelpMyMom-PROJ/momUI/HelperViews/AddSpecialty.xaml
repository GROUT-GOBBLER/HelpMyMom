<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="momUI.HelperViews.AddSpecialty"
             Title="AddSpecialty">
    <ScrollView
        VerticalOptions="Center"
        HorizontalOptions="Center">
        <VerticalStackLayout 
            Margin="15"
            Spacing="10"
            VerticalOptions="Center"
            HorizontalOptions="Center">
            <Label 
                x:Name="AddSpecialtyLabel"
                Text="Create a new specialty."
                LineBreakMode="WordWrap"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

            <Entry
                x:Name="EnterSpecialtyEntry"
                Placeholder="New specialty's name."
                TextChanged="EnterSpecialtyEntry_TextChanged"
                ClearButtonVisibility="WhileEditing"
                WidthRequest="200"
                VerticalOptions="Center"
                HorizontalOptions="Center"/>

            <Button 
                x:Name="SubmitNewSpecialtyButton"
                Text="Submit."
                TextColor="LightBlue"
                BackgroundColor="#3033aa"                        
                SemanticProperties.Hint="Submit new specialty."
                Clicked="SubmitNewSpecialtyButton_Clicked"
                VerticalOptions="Center"
                HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>