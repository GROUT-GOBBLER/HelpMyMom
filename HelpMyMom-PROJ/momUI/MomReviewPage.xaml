<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="momUI.MomReviewPage"
             Title="Review">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Back Button -->
        <Button Grid.Row="0"
                Text="BACK"
                HorizontalOptions="Start"
                Clicked="OnBackClicked"
                Margin="0,0,0,10" />

        <!-- Review Title -->
        <Label x:Name="MomReviewTemplateText"
               Grid.Row="1"
               Text="How did [HelperFName][HelperLName] do in assisting you?"
               FontSize="18"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,0,0,10"
               LineBreakMode="WordWrap" />

        <!-- Star Rating -->
        <HorizontalStackLayout Grid.Row="2"
                              HorizontalOptions="Center"
                              Spacing="5"
                              Margin="0,0,0,20">
            <Label Text="★" FontSize="24" TextColor="Gold" />
            <Label Text="★" FontSize="24" TextColor="Gold" />
            <Label Text="★" FontSize="24" TextColor="Gold" />
            <Label Text="★" FontSize="24" TextColor="Gold" />
            <Label Text="★" FontSize="24" TextColor="Gold" />
        </HorizontalStackLayout>

        <!-- Review Prompt and Input -->
        <Frame Grid.Row="3"
               BorderColor="Black"
               CornerRadius="1"
               Padding="5"
               HasShadow="True">
            <Editor x:Name="IssueDescriptionBox1"
                    Placeholder="Please write a short review about their performance."
                    HeightRequest="150"
                    Text="{Binding ReviewText}"
                    Margin="0,0,0,10" />
        </Frame>

        <!-- Submit Button -->
        <Button x:Name="SubmitTicketButton1"
                Grid.Row="4"
                Text="SUBMIT"
                BackgroundColor="Purple"
                TextColor="White"
                FontSize="16"
                FontAttributes="Bold"
                CornerRadius="10"
                HorizontalOptions="Center"
                Clicked="OnSubmitClicked"
                LineBreakMode="WordWrap"
                Margin="0,20,0,0" />
    </Grid>
</ContentPage>