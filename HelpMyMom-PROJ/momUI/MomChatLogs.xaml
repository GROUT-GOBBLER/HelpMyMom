<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="momUI.MomChatLogs">

    <ScrollView
        VerticalScrollBarVisibility="Always"
        Margin="20">
        <VerticalStackLayout
                    Padding="30,0"
                    Spacing="25">

            <!-- Header with Back and Settings Buttons -->
            <HorizontalStackLayout Grid.Row="0" Margin="0,0,0,10">
                
                <Button Text="BACK"
                        HorizontalOptions="Start"
                        Clicked="OnBackClicked" />
                
                <Button x:Name="TicketStatusButton"
                        Text="ONGOING"
                        BackgroundColor="Red"
                        TextColor="Black"
                        FontSize="25"
                        FontAttributes="Bold"
                        WidthRequest="200"
                        HeightRequest="50"
                        CornerRadius="10" 
                        Clicked="OnStatusCompleteClickedMom"
                        LineBreakMode="WordWrap" 
                        Margin="50,0,0,0" />

                <Button HorizontalOptions="EndAndExpand"
                        Clicked="OnSettingsClicked"
                        Margin="50,0,0,10">
                    <Button.ImageSource>
                        <FontImageSource FontFamily="MaterialIcons"
                           Glyph="&#xE8B8;"
                           Size="24" />
                    </Button.ImageSource>
                </Button>
            </HorizontalStackLayout>

            <Label
                Text="Chat Testing!!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <ListView 
                x:Name="ChatMessageListView"  
                HorizontalOptions="Start"
                VerticalOptions="Center"
                VerticalScrollBarVisibility="Never" 
                HasUnevenRows="True" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid 
                                Padding="10" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Label Grid.Column="1"
                                       Text="{Binding sender}"
                                       FontSize="25"
                                       FontAttributes="Bold" />
                                <Label Grid.Row="1"
                                       Grid.Column="1"
                                       Text="{Binding messageTextContent}"
                                       FontSize="15"
                                       FontAttributes="Italic"                                           
                                       VerticalOptions="End" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <HorizontalStackLayout
                HorizontalOptions="Center">
                <Entry 
                    x:Name="MessageTextEntry"
                    Placeholder="Enter your message."
                    TextChanged="MessageTextEntry_TextChanged"
                    ClearButtonVisibility="WhileEditing"
                    VerticalOptions="End"        
                    HorizontalOptions="Start" />

                <Button
                    x:Name="SendChatMessage"
                    Text="Send message."     
                    SemanticProperties.Hint="Send the typed message."
                    Clicked="SendChatMessage_Clicked"
                    VerticalOptions="End"
                    HorizontalOptions="End" />

                <Button 
                    x:Name="RefreshChatMessages"
                    Text="Refresh All Chat Messages."
                    SemanticProperties.Hint="Reload the page and show all of the chat messages."
                    Clicked="RefreshChatMessages_Clicked"
                    VerticalOptions="End"
                    HorizontalOptions="End" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>