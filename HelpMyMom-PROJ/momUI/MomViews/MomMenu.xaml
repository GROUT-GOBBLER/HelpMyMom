<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="momUI.MomMenu">


    <AbsoluteLayout>
        <ScrollView AbsoluteLayout.LayoutFlags="All"
                    AbsoluteLayout.LayoutBounds="0,0,1,1"
                    Margin="10,15,15,20">
        <VerticalStackLayout
                Padding="30,0"
                Spacing="25">

                <HorizontalStackLayout>
                    <VerticalStackLayout>
                        <Button
                            x:Name="AccessibiltySettings"
                            Text="Accessibility" 
                            SemanticProperties.Hint="Get"
                            BackgroundColor="Grey"
                            Clicked ="AccessibiltySettings_Clicked"
                            VerticalOptions="Center"
                            HorizontalOptions="Start" 
                            Margin="0,20,0,10"/>

                        <Button
                            x:Name="LogOutBtn"
                            Text="Log out" 
                            FontSize="5"
                            LineBreakMode="WordWrap"
                            BackgroundColor="Grey"
                            Margin="0,0,0,0"
                            SemanticProperties.Hint="Get"
                            Clicked="SignOutClicked"
                            HorizontalOptions="Fill" />
                    </VerticalStackLayout>
                </HorizontalStackLayout>



                <Label x:Name="MomNameHeader"
                    Text="First Name Last Name" 
                    FontSize="26"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    Margin="0,0,0,0"
                    LineBreakMode="WordWrap" />

                <Grid Padding="20">
                <!-- Define rows for the layout -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <!-- For Current Balance -->
                    <RowDefinition Height="Auto" />
                    <!-- For Open Chats and Create Ticket buttons -->
                    <RowDefinition Height="*" />
                    <!-- For the main content -->
                </Grid.RowDefinitions>

                <VerticalStackLayout>
                    <!-- Current Balance Label -->
                    <Label x:Name="BalanceLabelAmountText"
                            Grid.Row="0"
                            Text="{Binding BalanceLabel}" 
                            FontSize="15"
                            FontAttributes="Bold"
                            HorizontalOptions="Start"
                            Margin="-30,10,0,20"
                            LineBreakMode="WordWrap" />

                    <Button x:Name="AddBalanceBtn"
                            Text="Add Additional Tokens To Balance"
                            BackgroundColor="#3033aa"
                            TextColor="LightBlue"
                            FontSize="25"
                            FontAttributes="Bold"
                            WidthRequest="400"
                            CornerRadius="10" 
                            Clicked="OnAddBalanceClicked"
                            LineBreakMode="WordWrap" 
                            Margin="0,0,0,0"/>
                </VerticalStackLayout>
            </Grid>

                <Button x:Name="OpenChatBtn"
                    Text="OPEN CHATS"
                    BackgroundColor="Purple"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    WidthRequest="300"
                    CornerRadius="10" 
                    Clicked="OnOpenChatsClicked"
                    LineBreakMode="WordWrap" />

                <Button x:Name="CreateTicketBtn"
                    Text="CREATE A HELP TICKET"
                    BackgroundColor="Purple"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    WidthRequest="350"
                    CornerRadius="10" 
                    Clicked="OnCreateTicketClicked"
                    LineBreakMode="WordWrap" />
            </VerticalStackLayout>
    </ScrollView>

    <!-- Popup ContentView -->
    <ContentView x:Name="AddBalancePopup"
            AbsoluteLayout.LayoutFlags="All"
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            BackgroundColor="#80000000"
            IsVisible="False">
        <Frame BackgroundColor="White"
                   CornerRadius="10"
                   Padding="20"
                   WidthRequest="400"
                   HeightRequest="300"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">
            <VerticalStackLayout Spacing="15">
                    <Label x:Name="AddBalanceLabelPromptText"
                        Text="Enter how much you wish to add to your balance"
                        FontSize="16"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        LineBreakMode="WordWrap" />

                    <Entry x:Name="BalanceEntry"
                        Placeholder="Enter a value..."
                        Keyboard="Numeric"
                        HorizontalTextAlignment="Center" />

                    <HorizontalStackLayout 
                        Padding="30,0"
                        Spacing="25">

                        <Button x:Name="GoBack"
                           Text="CANCEL"
                           BackgroundColor="DarkRed"
                           TextColor="Pink"
                           FontSize="16"
                           FontAttributes="Bold"
                           CornerRadius="10"
                           HorizontalOptions="Center"
                           LineBreakMode="WordWrap"
                           Clicked="OnBackClicked"
                           Margin="20,0,0,10" />
                        
                        <Button x:Name="SubmitBalanceAmount"
                            Text="CONFIRM"
                            BackgroundColor="DarkGreen"
                            TextColor="LightGreen"
                            FontSize="16"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            HorizontalOptions="Center"
                            LineBreakMode="WordWrap"
                            Clicked="OnSubmitBalanceClicked" 
                            Margin="20,0,0,10" />

                    </HorizontalStackLayout>
                </VerticalStackLayout>
        </Frame>
    </ContentView>



    </AbsoluteLayout>

</ContentPage>
